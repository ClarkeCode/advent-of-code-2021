{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi", //Generate debugging info
				"/EHsc",
				// "/Wall",//All warnings
				"/Fe:",//Name executable
				"${workspaceFolder}\\problem.exe",//${fileBasenameNoExtension}.exe",
				"01/sonar-sweep-p2.c"//"${file}"
			],
			"problemMatcher": ["$msCompile"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}